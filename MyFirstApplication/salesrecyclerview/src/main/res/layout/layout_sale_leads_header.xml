<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header_content"
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <!--<com.example.quxiaopeng.salesrecyclerview.LoadingView-->
        <!--android:id="@+id/view_loading"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="24dp"/>-->

        <com.example.quxiaopeng.salesrecyclerview.SalesLeadsLoadingView
            android:id="@+id/view_loading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_loading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="下拉刷新 换一批企业" />

        <ImageView
            android:id="@+id/iv_completed"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignTop="@id/tv_hint"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_hint"
            android:src="@drawable/icon_refresh_completed" />

    </RelativeLayout>

</LinearLayout>