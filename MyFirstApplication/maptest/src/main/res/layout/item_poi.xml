<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dip"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#333333"
        android:textSize="15sp"
        tools:text="中关村768创意产业园"/>

    <TextView
        android:id="@+id/text_location_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_location_title"
        android:layout_marginTop="5dip"
        android:layout_alignParentLeft="true"
        android:textColor="#999999"
        android:textSize="10sp"
        tools:text="北京市海淀区学院路甲5号北8号,北京市海淀区学院路甲5号北8号,北京市海淀区学院路甲5号北8号,北京市海淀区学院路甲5号北8号,北京市海淀区学院路甲5号北8号,北京市海淀区学院路甲5号北8号,"/>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@id/text_location_address"
        android:layout_marginTop="10dp"/>

</RelativeLayout>